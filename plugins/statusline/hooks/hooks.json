{
  "description": "Event logging for statusline activity tracking",
  "hooks": {
    "PostToolUse": [{ "hooks": [{ "type": "command", "command": "statusline log-event" }] }],
    "PostToolUseFailure": [{ "hooks": [{ "type": "command", "command": "statusline log-event" }] }],
    "UserPromptSubmit": [{ "hooks": [{ "type": "command", "command": "statusline log-event" }] }],
    "Stop": [{ "hooks": [{ "type": "command", "command": "statusline log-event" }] }],
    "SubagentStart": [{ "hooks": [{ "type": "command", "command": "statusline log-event" }] }],
    "SubagentStop": [{ "hooks": [{ "type": "command", "command": "statusline log-event" }] }]
  }
}
